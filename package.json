{
  "name": "jsonnet-vscode",
  "displayName": "jsonnet-vscode",
  "description": "jsonnet extension for vs code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jsonnet-vscode.helloWorld",
    "onLanguage:jsonnet",
    "onCommand:jsonnet.previewToSide",
    "onCommand:jsonnet.preview"
  ],
  "configuration": {
    "properties": {
      "jsonnet.executablePath": {
        "default": null,
        "description": "Location of the `jsonnet` executable.",
        "type": "string"
      },
      "jsonnet.extStrs": {
        "default": null,
        "description": "External strings to pass to `jsonnet` executable.",
        "type": "object"
      },
      "jsonnet.libPaths": {
        "default": [],
        "description": "Additional paths to search for libraries when compiling Jsonnet code.",
        "type": "array"
      },
      "jsonnet.outputFormat": {
        "default": "yaml",
        "description": "Preview output format (yaml / json)",
        "enum": [
          "json",
          "yaml"
        ]
      }
    },
    "title": "Jsonnet configuration",
    "type": "object"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonnet-vscode.helloWorld",
        "title": "Hello World"
      }
    ],
    "grammars": [
      {
        "language": "jsonnet",
        "path": "./syntaxes/jsonnet.tmLanguage.json",
        "scopeName": "source.jsonnet"
      }
    ],
    "keybindings": [
      {
        "command": "jsonnet.previewToSide",
        "key": "shift+ctrl+i",
        "mac": "shift+cmd+i",
        "when": "editorFocus"
      }
    ],
    "languages": [
      {
        "aliases": [
          "Jsonnet",
          "jsonnet"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".jsonnet",
          ".libsonnet"
        ],
        "id": "jsonnet"
      }
    ]
  },
  "scripts": {
    "compile-dev": "tsc -b",
		"watch": "tsc -b -w",
    "compile": "webpack --mode development",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile-dev && npm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-watch": "webpack --mode development --watch",
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.6",
    "vscode-languageclient": "^6.1.3",
    "vscode-languageserver": "^6.1.1",
    "vscode-test": "^1.4.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
